{
  "manifest_version": 3,
  "name": "Advanced Ads Blocker",
  "version": "1.1",
  "description": "Blocks ads and unwanted content from websites.",
  "permissions": ["declarativeNetRequest", "declarativeNetRequestWithHostAccess", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "action": {
    "default_popup": "popup.html"
   
  }
 
}
